{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "dist/js"
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "src/app/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}